<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_prize_number_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:textStyle="bold"
        tools:text="特別獎" />

    <TextView
        android:id="@+id/tv_prize_number"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textStyle="bold"
        tools:text="12345678" />

    <TextView
        android:id="@+id/tv_prize_number2"
        android:layout_below="@id/tv_prize_number"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="12345678" />

    <TextView
        android:id="@+id/tv_prize_number3"
        android:layout_below="@id/tv_prize_number2"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="12345678" />

    <TextView
        android:id="@+id/tv_prize_value"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:textStyle="bold"
        tools:text="1,000萬" />

</RelativeLayout>